<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/teamNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:text="Team 20"
        android:textColor="@color/primary_text"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/atYourSeviceButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/atYourSeviceButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:onClick="onAtYourServiceButtonClick"
        android:text="At Your Service"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutButton"
        app:rippleColor="@color/button_ripple"
        app:strokeColor="@color/button_stroke"
        app:strokeWidth="0.5dp" />

    <Button
        android:id="@+id/StickItToEmButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:onClick="onStickItToEmClick"
        android:text="Stick It To 'Em"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atYourSeviceButton"
        app:rippleColor="@color/button_ripple"
        app:strokeColor="@color/button_stroke"
        app:strokeWidth="0.5dp" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-medium"
        android:onClick="onAboutButtonClick"
        android:text="About"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamNameTextView"
        app:rippleColor="@color/button_ripple"
        app:strokeColor="@color/button_stroke"
        app:strokeWidth="0.5dp" />

    <Button
        android:id="@+id/GeoNotifButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:onClick="onGeoNotifClick"
        android:text="GeoNotif"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StickItToEmButton"
        app:rippleColor="@color/button_ripple"
        app:strokeColor="@color/button_stroke"
        app:strokeWidth="0.5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>